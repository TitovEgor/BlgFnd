<Window x:Class="BlgFnd.DelSotrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlgFnd"
        mc:Ignorable="d"
        Title="Удаление сотрдника" Height="300" Width="400">
    <Grid Background="#FF5ABEFF">
        <Button x:Name="BackB" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
            Width="100" Height="20" Margin="15" Click="BackB_Click"/>
        <Button x:Name="DelUsB" Content="Удалить" HorizontalAlignment="Center"
            VerticalAlignment="Bottom" Margin="70" Width="150" Height="50" Click="DelUsB_Click" Background="#FFF70F0F"/>
        <TextBox x:Name="logUsTB" HorizontalAlignment="Left" VerticalAlignment="Top" 
             Margin="170,15,0,0" Width="200" Height="30" MaxLength="20" FontSize="14"/>
        <TextBox x:Name="adminkeyTB" HorizontalAlignment="Center" VerticalAlignment="Top" 
             Width="200" Height="30" MaxLength="20" FontSize="14" Margin="0,100,0,0"/>
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="15,15,0,0" FontSize="14" Width="70"/>
        <Label Content="Администраторский пароль:" HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontSize="14" Width="200" Margin="0,66,0,0"/>
    </Grid>
</Window>
