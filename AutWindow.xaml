<Window x:Class="BlgFnd.AutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlgFnd" mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="250" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5ABEFF">
        <TextBox x:Name="logUsTB" HorizontalAlignment="Left" Margin="100,15,0,0" Text="" VerticalAlignment="Top" 
                 Width="120" FontSize="14" Foreground="Black" Background="LightGray"/>
        <TextBox x:Name="passUsTB" HorizontalAlignment="Left" Margin="100,50,0,0" Text="" VerticalAlignment="Top" 
                 Width="120" FontSize="14" Foreground="Black" Background="LightGray" MaxLength="10"/>
        <Label Content="Логин:" Margin="10,15,160,0" VerticalAlignment="Top" FontSize="14" Width="80"/>
        <Label Content="Пароль:" Margin="10,50,170,0" VerticalAlignment="Top" FontSize="14" Width="70"/>
        <Button x:Name="enterB" Content="Войти" HorizontalAlignment="Left" Margin="80,100,0,0" VerticalAlignment="Top" 
                Height="30" Width="100" Click="enterB_Click"/>
    </Grid>
</Window>
