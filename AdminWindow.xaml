<Window x:Class="BlgFnd.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlgFnd"
        mc:Ignorable="d"
        Title="Меню администратора" Height="200" Width="200">
    <Grid>
        <Button Content="Добавить сотрудника" Width="150" Height="30" Click="NewSotrButton_Click" Margin="20,20,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Удалить сотрудника" Width="150" Height="30" Click="DelSotrButton_Click" Margin="20,70,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Назад" Width="150" Height="30" Click="BackButton_Click" Margin="20,120,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>        
    </Grid>
</Window>
